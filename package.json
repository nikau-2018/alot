  "dependencies": {
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.3.0",
    "knex": "^0.19.5",
    "libsodium-wrappers": "^0.7.3",
    "moment": "^2.22.2",
    "pg": "^7.4.3",
    "sqlite3": "^4.0.2"
